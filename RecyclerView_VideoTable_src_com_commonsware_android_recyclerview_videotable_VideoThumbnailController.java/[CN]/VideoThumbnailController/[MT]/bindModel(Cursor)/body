{
  super.bindModel(row);
  Uri video=ContentUris.withAppendedId(MediaStore.Video.Media.EXTERNAL_CONTENT_URI,row.getInt(row.getColumnIndex(MediaStore.Video.Media._ID)));
  DisplayImageOptions opts=new DisplayImageOptions.Builder().showImageOnLoading(R.drawable.ic_media_video_poster).build();
  imageLoader.displayImage(video.toString(),thumbnail,opts);
}

{
  super.onCreate(savedInstanceState);
  setContentView(R.layout.main);
  countries=(CountriesFragment)getSupportFragmentManager().findFragmentById(R.id.countries);
  if (countries == null) {
    countries=new CountriesFragment();
    getSupportFragmentManager().beginTransaction().add(R.id.countries,countries).commit();
  }
  details=(DetailsFragment)getSupportFragmentManager().findFragmentById(R.id.details);
  if (details == null && findViewById(R.id.details) != null) {
    details=new DetailsFragment();
    getSupportFragmentManager().beginTransaction().add(R.id.details,details).commit();
  }
}

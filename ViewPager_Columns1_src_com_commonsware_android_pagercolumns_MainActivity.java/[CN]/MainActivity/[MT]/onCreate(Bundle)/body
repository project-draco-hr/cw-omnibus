{
  super.onCreate(savedInstanceState);
  setContentView(R.layout.main);
  ViewPager pager=(ViewPager)findViewById(R.id.pager);
  if (pager == null) {
    if (getSupportFragmentManager().findFragmentById(R.id.editor1) == null) {
      FragmentPagerAdapter adapter=buildAdapter();
      getSupportFragmentManager().beginTransaction().add(R.id.editor1,adapter.getItem(0)).add(R.id.editor2,adapter.getItem(1)).add(R.id.editor3,adapter.getItem(2)).commit();
    }
  }
 else {
    TabPageIndicator tabs=(TabPageIndicator)findViewById(R.id.titles);
    pager.setAdapter(buildAdapter());
    tabs.setViewPager(pager);
  }
}

{
  menu.add(Menu.NONE,LOCAL_SEARCH_ID,Menu.NONE,"Local Search").setIcon(android.R.drawable.ic_search_category_default);
  menu.add(Menu.NONE,GLOBAL_SEARCH_ID,Menu.NONE,"Global Search").setIcon(android.R.drawable.ic_menu_search).setAlphabeticShortcut(SearchManager.MENU_KEY);
  return (super.onCreateOptionsMenu(menu));
}

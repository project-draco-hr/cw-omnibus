{
  SimpleCursorAdapter adapter;
  if (Build.VERSION.SDK_INT >= Build.VERSION_CODES.HONEYCOMB) {
    adapter=new SimpleCursorAdapter(ConstantsBrowser.this,R.layout.row,constantsCursor,new String[]{DatabaseHelper.TITLE,DatabaseHelper.VALUE},new int[]{R.id.title,R.id.value},0);
  }
 else {
    adapter=new SimpleCursorAdapter(ConstantsBrowser.this,R.layout.row,constantsCursor,new String[]{DatabaseHelper.TITLE,DatabaseHelper.VALUE},new int[]{R.id.title,R.id.value});
  }
  setListAdapter(adapter);
}

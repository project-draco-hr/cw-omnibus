{
  NotificationManager mgr=(NotificationManager)ctxt.getSystemService(Context.NOTIFICATION_SERVICE);
  NotificationCompat.Builder b=new NotificationCompat.Builder(ctxt);
  PendingIntent pi=PendingIntent.getActivity(ctxt,0,new Intent(ctxt,OrderedActivity.class),0);
  b.setAutoCancel(true).setDefaults(Notification.DEFAULT_ALL).setWhen(System.currentTimeMillis()).setContentTitle(ctxt.getString(R.string.notify_title)).setContentText(ctxt.getString(R.string.notify_text)).setSmallIcon(android.R.drawable.stat_notify_chat).setTicker(ctxt.getString(R.string.notify_ticker)).setContentIntent(pi);
  mgr.notify(NOTIFY_ME_ID,b.getNotification());
}

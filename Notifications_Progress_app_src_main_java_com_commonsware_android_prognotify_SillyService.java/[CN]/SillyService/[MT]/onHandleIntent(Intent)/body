{
  NotificationManager mgr=(NotificationManager)getSystemService(NOTIFICATION_SERVICE);
  NotificationCompat.Builder builder=new NotificationCompat.Builder(this);
  builder.setTicker(getText(R.string.ticker)).setContentTitle(getString(R.string.progress_notification)).setContentText(getString(R.string.busy)).setContentIntent(buildContentIntent()).setSmallIcon(R.drawable.ic_stat_notif_small_icon).setOngoing(true);
  for (int i=0; i < 20; i++) {
    builder.setProgress(20,i,false);
    mgr.notify(NOTIFICATION_ID,builder.build());
    SystemClock.sleep(1000);
  }
  builder.setContentText(getString(R.string.done)).setProgress(0,0,false).setOngoing(false);
  mgr.notify(NOTIFICATION_ID,builder.build());
}
